<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_register" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="60.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20.0dip"
            android:text="用户登陆"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="20.0sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/login_up" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="5.0dip"
                android:text="账号"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#ffd2cbcb"
                android:textSize="15.0sp" />

            <EditText
                android:id="@+id/login_my_user_number"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="60.0dip"
                android:hint="请输入手机/邮箱/学号"
                android:background="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/login_dwon" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="5.0dip"
                android:text="@string/login_password"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#ffd2cbcb"
                android:textSize="15.0sp" />

            <EditText
                android:id="@+id/login_my_user_password"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="60.0dip"
                android:background="@null"
                android:inputType="textPassword" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Button
                android:id="@+id/bt_login"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_centerVertical="true"
                android:background="@drawable/xml_login_btn"
                android:focusable="true"
                android:onClick="click"
                android:text="@string/login_submit" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15.0sp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/left_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户？"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/left_view"
            android:text="点击注册"
            android:textColor="@color/green"
            android:textSize="20.0sp" />

        <TextView
            android:id="@+id/lost_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20.0sp"
            android:text="忘记密码"
            android:textColor="@color/green"
            android:textSize="20.0sp" />
    </RelativeLayout>

</RelativeLayout>