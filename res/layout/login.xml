<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/xml_login_bg"
        android:orientation="vertical"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="60.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20.0dip"
            android:text="@string/login_title"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/login_up" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="5.0dip"
                android:text="@string/login_username"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#ffd2cbcb"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/app_login_edit_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="60.0dip"
                android:hint="输入学号"
                android:background="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@drawable/login_dwon" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="5.0dip"
                android:text="@string/login_password"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#ffd2cbcb"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/app_login_edit_pass"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="60.0dip"
                android:background="@null"
                android:inputType="textPassword" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Button
                android:id="@+id/app_login_btn_submit"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_centerVertical="true"
                android:background="@drawable/xml_login_btn"
                android:focusable="true"
                android:onClick="click"
                android:text="@string/login_submit" />
        </RelativeLayout>
    </LinearLayout>

</merge>