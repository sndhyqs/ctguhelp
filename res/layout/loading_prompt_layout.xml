<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_prompt_linear"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+id/loading_prompt_progress"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_marginRight="6.0dip"
        android:indeterminateDrawable="@drawable/loading_progress_wait" />

    <TextView
        android:id="@+id/loading_prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="努力加载中……"
        android:textColor="#ff5f7bbc"
        android:textSize="18.0sp" />

    <ImageView
        android:id="@+id/prompt_refresh"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_marginLeft="3.0dip"
        android:padding="3.0dip"
        android:scaleType="fitCenter"
        android:src="@drawable/loading_refresh_icon"
        android:visibility="gone" />

</LinearLayout>